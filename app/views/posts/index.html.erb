<%= link_to "Home",root_path %>

<h1>Posts Index</h1>

<%= link_to "New Post",new_post_path %>

<% @posts.reverse_each do |post| %>
  <div>
    <h3><%= post.title %></h3>
    <%= image_tag post.image.url(:medium) if post.image.present? %>
    <br>
    <%= link_to "View", post_path(post) %>

  </div>
<% end %>
